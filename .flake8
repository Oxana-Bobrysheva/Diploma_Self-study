[flake8]
# Line length
max-line-length = 120


# Exclude directories and files
exclude =
    .git,
    __pycache__,
    migrations,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    .tox,
    .coverage,
    htmlcov,
    .pytest_cache,
    .mypy_cache,
    settings.py,
    manage.py,
